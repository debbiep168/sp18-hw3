<%= form_tag students_path do %>
  <%= label_tag(:fullName, "Full name") %>
  <%= text_field_tag(:fullName, nil, placeholder: @placeholderName) %>

  <%= label_tag(:gradeLvl, "Grade level") %>
  <%= text_field_tag(:gradeLvl, nil, placeholder: @placeholderGrade) %>

  <%= label_tag(:favClass, "Favorite Class") %>
  <%= text_field_tag(:favClass, nil, placeholder: @placeholderClass) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>
